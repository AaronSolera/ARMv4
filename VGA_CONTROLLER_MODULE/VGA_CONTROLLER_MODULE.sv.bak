module VGA_CONTROLLER_MODULE (CLK, RST, H_SYNC, V_SYNC, VGA_CLK, VGA_SYNC_N, VGA_BLANK_N, X_POS, Y_POS);
	
	input logic CLK, RST;
	output logic H_SYNC, V_SYNC, VGA_CLK, VGA_SYNC_N, VGA_BLANK_N, X_POS, Y_POS;
	logic OUT_CLK, H_COUNT, V_COUNT, H_CLK, V_CLK, H_RST, V_RST, H_RGB_ENA, V_RGB_ENA;
	
	CLK_HALF_DIV_MODULE 
		F_DIV (CLK, RST, OUT_CLK);
	
	COUNTER_MODULE 
		V_COUNTER (OUT_CLK, RST & H_RST, H_COUNT),
		H_COUNTER (H_CLK, RST & V_RST, V_COUNT);
		
	SYNC_MODULE 
		H_SYNC_MODULE (H_COUNT, A, B, C, D, H_RGB_ENA, H_CLK, H_RST),
		V_SYNC_MODULE (V_COUNT, A, B, C, D, V_RGB_ENA, V_CLK, V_RST);
	
	_AND 
		VGA_SYNC_AND (H_CLK, V_CLK, VGA_SYNC_N),
		VGA_BLANK_AND (H_RGB_ENA, V_RGB_ENA, VGA_BLANK_N);
		
	assign H_SYNC = H_CLK;
	assign V_SYNC = V_CLK;
	assign VGA_CLK = OUT_CLK;
	
endmodule 