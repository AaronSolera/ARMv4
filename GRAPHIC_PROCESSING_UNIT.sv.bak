module GRAPHIC_PROCESSING_UNIT (CLK, RST, INSTRUCTION, H_SYNC, V_SYNC, VGA_CLK, VGA_SYNC_N, VGA_BLANK_N, RGB_COLOR);
	
	//Instruction = Y[10],X[10],OP[2],SPRITE_ID[10]
	input  logic        CLK, RST;
	input  logic [31:0] INSTRUCTION;
	output logic        H_SYNC, V_SYNC, VGA_CLK, VGA_SYNC_N, VGA_BLANK_N;
	output logic [23:0] RGB_COLOR; 
	
	logic        W_VGA_BLANK_N, WRITE;
	logic [31:0] CURRENT_INSTRUCTION;
	logic [9:0]  INSTRUCTION_ADDRESS, PGA_CLM, PGA_ROW, GIM_ADD, SCREEN_POS_X, SCREEN_POS_Y;
	logic [4:0]  SID_CLM, SID_ROW;
	
	VGA_CONTROLLER_MODULE 
		VCM (CLK, RST, H_SYNC, V_SYNC, VGA_CLK, VGA_SYNC_N, W_VGA_BLANK_N, SCREEN_POS_X, SCREEN_POS_Y);
	
	GRAPHIC_CONTROL_UNIT 
		GCU (CLK, INSTRUCTION, W_VGA_BLANK_N, CURRENT_INSTRUCTION, SID_CLM, SID_ROW, PGA_CLM, PGA_ROW, WRITE, GIM_ADD);
	
	MEMORY_MODULE #(32, 10)
		GRAPHIC_INSTRUCTION_MEMORY (CLK, RST, GIM_ADD, WRITE, INSTRUCTION, CURRENT_INSTRUCTION);
		
	assign VGA_BLANK_N = W_VGA_BLANK_N;
	
endmodule 